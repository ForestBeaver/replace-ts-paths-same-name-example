{
  "compilerOptions": {
    "module": "esNext",
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "emitDeclarationOnly": true,
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "declaration": true,
    "baseUrl": "",
    "skipLibCheck": true,
    "incremental": true,
    "outDir": "dist",
    "paths": {
      "*": [
          "src/*",
        ],
      "@": [
        "src/index"
      ],
      "@/*": [
          "src/*"
      ]
    },
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}